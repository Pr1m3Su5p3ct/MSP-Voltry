---
interface Props {
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  class?: string;
}

const {
  variant = 'primary',
  size = 'md',
  href,
  type = 'button',
  class: className = '',
} = Astro.props;

const Tag = href ? 'a' : 'button';
const additionalProps = href ? { href } : { type };
---

<Tag
  class={`btn btn-${variant} btn-${size} ${className}`}
  {...additionalProps}
>
  <slot />
</Tag>

<style>
  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    font-family: var(--font-sans);
    font-weight: var(--weight-semibold);
    text-decoration: none;
    border: none;
    border-radius: var(--radius-lg);
    cursor: pointer;
    transition: all var(--transition-base);
    white-space: nowrap;
    position: relative;
    overflow: hidden;
  }

  /* Full width variant for mobile */
  @media (max-width: 768px) {
    .btn {
      white-space: normal;
      text-align: center;
    }
  }

  .btn::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0.1),
      transparent
    );
    opacity: 0;
    transition: opacity var(--transition-fast);
  }

  .btn:hover::before {
    opacity: 1;
  }

  .btn:active {
    transform: translateY(1px);
  }

  .btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  /* Sizes */
  .btn-sm {
    padding: var(--space-2) var(--space-4);
    font-size: var(--text-sm);
  }

  .btn-md {
    padding: var(--space-3) var(--space-6);
    font-size: var(--text-base);
  }

  .btn-lg {
    padding: var(--space-4) var(--space-8);
    font-size: var(--text-lg);
  }

  /* Primary variant */
  .btn-primary {
    background: linear-gradient(
      135deg,
      var(--color-primary-600),
      var(--color-primary-700)
    );
    color: white;
    box-shadow: var(--elevation-2), var(--glow-primary);
  }

  .btn-primary:hover {
    box-shadow: var(--elevation-3), var(--glow-primary);
    transform: translateY(-2px) scale(1.02);
    background: linear-gradient(
      135deg,
      var(--color-primary-500),
      var(--color-primary-600)
    );
  }

  .btn-primary:active {
    transform: translateY(0) scale(0.98);
  }

  /* Secondary variant */
  .btn-secondary {
    background: linear-gradient(
      135deg,
      var(--color-accent-500),
      var(--color-accent-600)
    );
    color: var(--color-gray-900);
    box-shadow: var(--elevation-2), var(--glow-accent);
  }

  .btn-secondary:hover {
    box-shadow: var(--elevation-3), var(--glow-accent);
    transform: translateY(-2px) scale(1.02);
    background: linear-gradient(
      135deg,
      var(--color-accent-400),
      var(--color-accent-500)
    );
  }

  .btn-secondary:active {
    transform: translateY(0) scale(0.98);
  }

  /* Outline variant */
  .btn-outline {
    background-color: transparent;
    color: var(--text-primary);
    border: 2px solid var(--border-default);
    box-shadow: none;
  }

  .btn-outline:hover {
    border-color: var(--color-primary-600);
    color: var(--color-primary-600);
    background-color: var(--bg-tertiary);
    box-shadow: var(--elevation-1);
  }

  [data-theme="dark"] .btn-outline:hover {
    border-color: var(--color-primary-400);
    color: var(--color-primary-400);
  }

  /* Ghost variant */
  .btn-ghost {
    background-color: transparent;
    color: var(--text-secondary);
    box-shadow: none;
  }

  .btn-ghost:hover {
    color: var(--text-primary);
    background-color: var(--bg-tertiary);
  }

  /* Focus styles */
  .btn:focus-visible {
    outline: 2px solid var(--color-primary-500);
    outline-offset: 2px;
  }
</style>
