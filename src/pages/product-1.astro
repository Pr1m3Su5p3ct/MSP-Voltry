---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';
import Card from '../components/Card.astro';
---

<BaseLayout
  title="Product 1 - AI-Powered Power Quality Forecasting | Voltry"
  description="Predict power quality issues 24-72 hours before they occur with 95% accuracy. Starting at $499/month."
>
  <Header />

  <main id="main-content">
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="ai-badge">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M13 2L3 14h8l-1 8 10-12h-8l1-8z"/>
          </svg>
          <span>AI-POWERED PREDICTIONS</span>
        </div>

        <h1 class="hero-title">
          Product 1:<br />
          Predict Issues <span class="gradient-text">Before They Happen</span>
        </h1>

        <p class="hero-subtitle">
          AI forecasts power quality issues 24-72 hours ahead with 95% accuracy
        </p>

        <div class="hero-pricing">
          <span class="hero-price">Starting at $499</span>
          <span class="hero-period">/month</span>
        </div>

        <div class="hero-cta">
          <Button size="lg" href="/contact">Request Demo</Button>
          <Button variant="outline" size="lg" href="#features">See How It Works</Button>
        </div>

        <div class="hero-trust">
          <svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          <span>95% accuracy</span>
          <svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          <span>Includes P0</span>
          <svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          <span>Federated learning</span>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="features-section" id="features">
      <div class="container">
        <div class="section-header">
          <h2>Advanced AI-Powered Features</h2>
          <p>Everything you need to prevent costly downtime</p>
        </div>

        <div class="features-list">
          <!-- THD Forecasting -->
          <Card variant="elevated" class="feature-card">
            <div class="feature-content">
              <div class="feature-header">
                <div class="feature-icon">üîÆ</div>
                <div class="feature-header-text">
                  <h3 class="feature-title">THD Forecasting</h3>
                  <span class="feature-badge">95% accuracy</span>
                </div>
              </div>
              <p class="feature-description">
                Predict 24-72 hours ahead with MAPE: 4.7%
              </p>
              <div class="feature-details">
                <p>Our AI models analyze historical patterns and predict future THD levels with industry-leading accuracy. Get early warnings before harmonic distortion reaches critical levels.</p>
              </div>
            </div>
          </Card>

          <!-- Failure Prediction -->
          <Card variant="elevated" class="feature-card">
            <div class="feature-content">
              <div class="feature-header">
                <div class="feature-icon">‚ö†Ô∏è</div>
                <div class="feature-header-text">
                  <h3 class="feature-title">Failure Prediction</h3>
                  <span class="feature-badge">30-day window</span>
                </div>
              </div>
              <p class="feature-description">
                Detect failing equipment before catastrophic loss
              </p>
              <div class="feature-details">
                <p>Machine learning algorithms identify patterns indicating imminent equipment failure. Predict transformer, motor, and capacitor failures weeks before they occur.</p>
              </div>
            </div>
          </Card>

          <!-- Load Impact Analysis -->
          <Card variant="elevated" class="feature-card">
            <div class="feature-content">
              <div class="feature-header">
                <div class="feature-icon">üéØ</div>
                <div class="feature-header-text">
                  <h3 class="feature-title">Load Impact Analysis</h3>
                  <span class="feature-badge">Real-time sim</span>
                </div>
              </div>
              <p class="feature-description">
                "What if" simulator for capacity planning
              </p>
              <div class="feature-details">
                <p>Simulate the impact of adding or removing loads before making changes. Optimize your facility's power distribution with confidence.</p>
              </div>
            </div>
          </Card>

          <!-- Federated Learning -->
          <Card variant="elevated" class="feature-card">
            <div class="feature-content">
              <div class="feature-header">
                <div class="feature-icon">üîê</div>
                <div class="feature-header-text">
                  <h3 class="feature-title">Federated Learning</h3>
                  <span class="feature-badge">50+ facilities</span>
                </div>
              </div>
              <p class="feature-description">
                Learn without sharing data, privacy-preserving AI
              </p>
              <div class="feature-details">
                <p>Benefit from insights across 50+ facilities while keeping your data secure. Our federated learning approach improves predictions without compromising privacy.</p>
              </div>
            </div>
          </Card>

          <!-- Acoustic Correlation -->
          <Card variant="elevated" class="feature-card">
            <div class="feature-content">
              <div class="feature-header">
                <div class="feature-icon">üéµ</div>
                <div class="feature-header-text">
                  <h3 class="feature-title">Acoustic Correlation</h3>
                  <span class="feature-badge beta">Patent pending</span>
                </div>
              </div>
              <p class="feature-description">
                Correlate vibrations with power quality (Beta)
              </p>
              <div class="feature-details">
                <p>Advanced algorithms correlate acoustic signatures with electrical anomalies. Detect mechanical issues through their electrical fingerprint.</p>
              </div>
            </div>
          </Card>
        </div>
      </div>
    </section>

    <!-- Federation Explainer -->
    <section class="federation-section">
      <div class="container">
        <Card variant="elevated" padding="lg" class="federation-card">
          <div class="federation-content">
            <h2 class="federation-title">How Federated Learning Works</h2>
            <p class="federation-subtitle">
              Learn from 50+ facilities WITHOUT sharing data
            </p>

            <div class="federation-diagram">
              <div class="federation-step">
                <div class="federation-icon facility">
                  <svg viewBox="0 0 24 24" fill="currentColor">
                    <path d="M3 9l9-7 9 7v11a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/><polyline points="9 22 9 12 15 12 15 22"/>
                  </svg>
                </div>
                <span class="federation-label">Your Facility</span>
              </div>

              <div class="federation-arrow">‚Üí</div>

              <div class="federation-step">
                <div class="federation-icon learning">
                  <svg viewBox="0 0 24 24" fill="currentColor">
                    <rect x="3" y="11" width="18" height="11" rx="2" ry="2"/><path d="M7 11V7a5 5 0 0110 0v4"/>
                  </svg>
                </div>
                <span class="federation-label">Federated Learning</span>
              </div>

              <div class="federation-arrow">‚Üí</div>

              <div class="federation-step">
                <div class="federation-icon network">
                  <svg viewBox="0 0 24 24" fill="currentColor">
                    <path d="M17 21v-2a4 4 0 00-4-4H5a4 4 0 00-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 00-3-3.87"/><path d="M16 3.13a4 4 0 010 7.75"/>
                  </svg>
                </div>
                <span class="federation-label">50+ Facilities</span>
              </div>
            </div>

            <div class="federation-benefits">
              <div class="federation-benefit">
                <svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                <span>Data NEVER leaves your facility</span>
              </div>
              <div class="federation-benefit">
                <svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                <span>Differential privacy guarantees</span>
              </div>
              <div class="federation-benefit">
                <svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                <span>Blockchain audit trail</span>
              </div>
              <div class="federation-benefit">
                <svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                <span>Better predictions from network effects</span>
              </div>
            </div>
          </div>
        </Card>
      </div>
    </section>

    <!-- ROI Comparison -->
    <section class="comparison-section">
      <div class="container">
        <div class="section-header">
          <h2>Product Comparison</h2>
          <p>See what you get with Product 1</p>
        </div>

        <div class="comparison-grid">
          <!-- Product 0 -->
          <Card variant="elevated" class="comparison-card">
            <h3 class="comparison-title">Product 0</h3>
            <div class="comparison-savings">$50K saved</div>
            <p class="comparison-subtitle">Annually</p>

            <ul class="comparison-features">
              <li><svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>Real-time monitoring</li>
              <li><svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>Compliance reports</li>
              <li><svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>Email alerts</li>
            </ul>

            <div class="comparison-price">Free</div>
          </Card>

          <!-- Product 1 -->
          <Card variant="elevated" class="comparison-card featured">
            <div class="comparison-badge">RECOMMENDED</div>
            <h3 class="comparison-title">Product 1</h3>
            <div class="comparison-savings">$280K saved</div>
            <p class="comparison-subtitle">Annually</p>

            <ul class="comparison-features">
              <li><svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>Everything in Product 0</li>
              <li><svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>24-72h forecasts</li>
              <li><svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>Failure prediction</li>
              <li><svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>Federated learning</li>
            </ul>

            <div class="comparison-price">$499<span>/mo</span></div>
            <Button size="lg" href="/contact" class="comparison-cta">Get Started</Button>
          </Card>
        </div>

        <div class="comparison-note">
          <p>
            <strong>ROI in 3-6 months:</strong> Product 1 pays for itself by preventing just one critical failure per year. The average cost of unplanned downtime is $5,600 per minute for data centers.
          </p>
        </div>
      </div>
    </section>

    <!-- Visual Demo -->
    <section class="demo-section">
      <div class="container">
        <Card variant="elevated" padding="lg" class="demo-card">
          <div class="demo-content">
            <div class="demo-info">
              <h2 class="demo-title">See Product 1 in Action</h2>
              <p class="demo-description">
                Watch how our AI predicts a critical power quality event 48 hours before it occurs, giving your team time to take preventive action.
              </p>
              <Button size="lg" href="/contact">Request a Live Demo</Button>
            </div>
            <div class="demo-visual">
              <img
                src="https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=800&auto=format&fit=crop&q=80"
                alt="Product 1 dashboard showing AI forecasting"
                loading="lazy"
              />
            </div>
          </div>
        </Card>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  /* Hero Section */
  .hero {
    padding: var(--space-24) 0 var(--space-20);
    text-align: center;
    background: linear-gradient(
      180deg,
      var(--bg-primary) 0%,
      var(--bg-secondary) 100%
    );
  }

  .hero .container {
    max-width: 800px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-6);
  }

  .ai-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-6);
    background: linear-gradient(135deg, var(--color-primary-600), var(--color-primary-700));
    color: white;
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: var(--weight-semibold);
    letter-spacing: 0.05em;
  }

  .ai-badge svg {
    width: 20px;
    height: 20px;
  }

  .hero-title {
    font-size: var(--text-6xl);
    line-height: var(--line-tight);
    font-weight: var(--weight-bold);
    color: var(--text-primary);
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--color-primary-600), var(--color-accent-500));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: var(--text-xl);
    color: var(--text-secondary);
    line-height: var(--line-relaxed);
  }

  .hero-pricing {
    display: flex;
    align-items: baseline;
    gap: var(--space-2);
  }

  .hero-price {
    font-size: var(--text-4xl);
    font-weight: var(--weight-bold);
    color: var(--text-primary);
  }

  .hero-period {
    font-size: var(--text-lg);
    color: var(--text-secondary);
  }

  .hero-cta {
    display: flex;
    gap: var(--space-4);
    margin-top: var(--space-4);
  }

  .hero-trust {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    font-size: var(--text-sm);
    color: var(--text-secondary);
  }

  .hero-trust svg {
    width: 20px;
    height: 20px;
    color: var(--color-success);
  }

  /* Features Section */
  .features-section {
    padding: var(--space-20) 0;
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .section-header h2 {
    font-size: var(--text-4xl);
    color: var(--text-primary);
    margin-bottom: var(--space-4);
  }

  .section-header p {
    font-size: var(--text-lg);
    color: var(--text-secondary);
  }

  .features-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    max-width: 900px;
    margin: 0 auto;
  }

  .feature-card {
    transition: all var(--transition-base);
  }

  .feature-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .feature-header {
    display: flex;
    align-items: center;
    gap: var(--space-4);
  }

  .feature-icon {
    font-size: 2.5rem;
    flex-shrink: 0;
  }

  .feature-header-text {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-4);
  }

  .feature-title {
    font-size: var(--text-2xl);
    font-weight: var(--weight-semibold);
    color: var(--text-primary);
  }

  .feature-badge {
    padding: var(--space-1) var(--space-3);
    background-color: var(--color-primary-100);
    color: var(--color-primary-700);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: var(--weight-semibold);
    white-space: nowrap;
  }

  .feature-badge.beta {
    background-color: var(--color-accent-100);
    color: var(--color-accent-700);
  }

  [data-theme="dark"] .feature-badge {
    background-color: var(--color-primary-900);
    color: var(--color-primary-300);
  }

  .feature-description {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    font-weight: var(--weight-medium);
  }

  .feature-details {
    font-size: var(--text-base);
    color: var(--text-secondary);
    line-height: var(--line-relaxed);
  }

  /* Federation Section */
  .federation-section {
    padding: var(--space-20) 0;
    background-color: var(--bg-secondary);
  }

  .federation-card {
    background: linear-gradient(
      135deg,
      var(--bg-secondary) 0%,
      var(--bg-tertiary) 100%
    );
  }

  .federation-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-8);
    text-align: center;
  }

  .federation-title {
    font-size: var(--text-3xl);
    color: var(--text-primary);
  }

  .federation-subtitle {
    font-size: var(--text-lg);
    color: var(--text-secondary);
  }

  .federation-diagram {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-6);
    flex-wrap: wrap;
  }

  .federation-step {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3);
  }

  .federation-icon {
    width: 80px;
    height: 80px;
    border-radius: var(--radius-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--elevation-2);
  }

  .federation-icon svg {
    width: 40px;
    height: 40px;
  }

  .federation-icon.facility {
    background: linear-gradient(135deg, var(--color-primary-100), var(--color-primary-200));
    color: var(--color-primary-700);
  }

  .federation-icon.learning {
    background: linear-gradient(135deg, var(--color-gray-200), var(--color-gray-300));
    color: var(--color-gray-700);
  }

  .federation-icon.network {
    background: linear-gradient(135deg, var(--color-accent-100), var(--color-accent-200));
    color: var(--color-accent-700);
  }

  .federation-label {
    font-size: var(--text-sm);
    font-weight: var(--weight-medium);
    color: var(--text-secondary);
  }

  .federation-arrow {
    font-size: var(--text-3xl);
    color: var(--text-tertiary);
  }

  .federation-benefits {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-4);
    margin-top: var(--space-4);
  }

  .federation-benefit {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    font-size: var(--text-base);
    color: var(--text-secondary);
  }

  .federation-benefit svg {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
    color: var(--color-success);
  }

  /* Comparison Section */
  .comparison-section {
    padding: var(--space-20) 0;
  }

  .comparison-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-8);
    max-width: 900px;
    margin: 0 auto var(--space-12);
  }

  .comparison-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    position: relative;
  }

  .comparison-card.featured {
    border: 2px solid var(--color-primary-500);
    transform: scale(1.05);
  }

  .comparison-badge {
    position: absolute;
    top: -12px;
    right: var(--space-6);
    padding: var(--space-2) var(--space-4);
    background: linear-gradient(135deg, var(--color-primary-600), var(--color-primary-700));
    color: white;
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: var(--weight-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .comparison-title {
    font-size: var(--text-2xl);
    font-weight: var(--weight-bold);
    color: var(--text-primary);
  }

  .comparison-savings {
    font-size: var(--text-4xl);
    font-weight: var(--weight-bold);
    background: linear-gradient(135deg, var(--color-primary-600), var(--color-accent-500));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .comparison-subtitle {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    padding-bottom: var(--space-4);
    border-bottom: 1px solid var(--border-subtle);
  }

  .comparison-features {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    flex: 1;
  }

  .comparison-features li {
    display: flex;
    align-items: flex-start;
    gap: var(--space-3);
    font-size: var(--text-sm);
    color: var(--text-secondary);
  }

  .comparison-features svg {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    color: var(--color-success);
    margin-top: 2px;
  }

  .comparison-price {
    font-size: var(--text-3xl);
    font-weight: var(--weight-bold);
    color: var(--text-primary);
    padding-top: var(--space-4);
    border-top: 1px solid var(--border-subtle);
  }

  .comparison-price span {
    font-size: var(--text-lg);
    color: var(--text-secondary);
  }

  .comparison-cta {
    width: 100%;
    margin-top: var(--space-4);
  }

  .comparison-note {
    max-width: 900px;
    margin: 0 auto;
    padding: var(--space-6);
    background-color: var(--bg-tertiary);
    border-radius: var(--radius-lg);
    border-left: 4px solid var(--color-primary-500);
  }

  .comparison-note p {
    font-size: var(--text-base);
    color: var(--text-secondary);
    line-height: var(--line-relaxed);
  }

  /* Demo Section */
  .demo-section {
    padding: var(--space-20) 0;
    background-color: var(--bg-secondary);
  }

  .demo-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: center;
  }

  .demo-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .demo-title {
    font-size: var(--text-3xl);
    color: var(--text-primary);
  }

  .demo-description {
    font-size: var(--text-base);
    color: var(--text-secondary);
    line-height: var(--line-relaxed);
  }

  .demo-visual {
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--elevation-3);
  }

  .demo-visual img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .comparison-grid {
      grid-template-columns: 1fr;
    }

    .comparison-card.featured {
      transform: scale(1);
    }

    .demo-content {
      grid-template-columns: 1fr;
    }

    .demo-visual {
      order: -1;
    }

    .federation-benefits {
      grid-template-columns: 1fr;
    }
