---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';
import Card from '../components/Card.astro';
import VerticalSlider from '../components/VerticalSlider.astro';
import CircuitChip from '../components/CircuitChip.astro';
import PricingCard from '../components/PricingCard.astro';
import { getCollection } from 'astro:content';

// Import page content from CMS
import homepageData from '../content/pages/homepage.json';

// Get testimonials from CMS
const testimonials = await getCollection('testimonials');
const featuredTestimonial = testimonials
  .filter(t => t.data.featured)
  .sort((a, b) => a.data.order - b.data.order)[0];

const { hero, pspCards, singlePane, features, pricing, stats, finalCTA } = homepageData;
---

<BaseLayout title="Voltry - Predict Power Quality Issues Before They Happen">
  <Header />

  <main id="main-content">
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <h1 class="hero-title">
            {hero.title}<br />
            <span class="gradient-text">{hero.highlightedText}</span>
          </h1>
          <p class="hero-subtitle">
            {hero.subtitle}
          </p>
          <div class="hero-cta">
            <Button size="lg" href="/contact">{hero.primaryCTA}</Button>
            <Button variant="outline" size="lg" href="#how-it-works">{hero.secondaryCTA}</Button>
          </div>
          <div class="hero-trust">
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
            <span>{hero.trust1}</span>
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
            <span>{hero.trust2}</span>
            <svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
            <span>{hero.trust3}</span>
          </div>
        </div>
        <div class="hero-visual">
          <div class="hero-slider-container">
            <VerticalSlider
              images={hero.heroSlider.map(img => img.url)}
              autoplayDelay={5000}
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Problem-Solution-Proof Cards -->
    <section class="psp-section">
      <div class="container">
        <div class="psp-grid">
          {pspCards.map((card, index) => (
            <Card variant="elevated" class="psp-card" data-index={index}>
              <div class="psp-step-number">0{index + 1}</div>
              <div class={`psp-icon ${card.icon}`}>
                <div class="psp-icon-bg"></div>
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  {card.icon === 'problem' && (
                    <>
                      <circle cx="12" cy="12" r="10"/><line x1="12" y1="8" x2="12" y2="12"/><line x1="12" y1="16" x2="12.01" y2="16"/>
                    </>
                  )}
                  {card.icon === 'solution' && (
                    <path d="M13 2L3 14h8l-1 8 10-12h-8l1-8z"/>
                  )}
                  {card.icon === 'proof' && (
                    <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"/>
                  )}
                </svg>
              </div>
              <h3 class="psp-title">{card.title}</h3>
              <p class="psp-description" set:html={card.description} />
              {index < 2 && <div class="psp-arrow">â†’</div>}
            </Card>
          ))}
        </div>
      </div>
    </section>

    <!-- Features Grid -->
    <section class="features-section" id="how-it-works">
      <div class="container">
        <div class="section-header">
          <h2>{features.title}</h2>
          <p>{features.subtitle}</p>
        </div>

        <!-- Single Pane of Glass Visualization -->
        <div class="single-pane-visual">
          <CircuitChip />
          <div class="visual-description">
            <h3 class="visual-title">{singlePane.title}</h3>
            <p class="visual-text">
              {singlePane.description}
            </p>
          </div>
        </div>

        <div class="features-grid">
          {features.list.map((feature) => (
            <Card variant="interactive" class="feature-card">
              <div class="feature-icon">{feature.icon}</div>
              <h3 class="feature-title">{feature.title}</h3>
              <p class="feature-description">{feature.description}</p>
            </Card>
          ))}
        </div>
      </div>
    </section>

    <!-- Pricing Table -->
    <section class="pricing-section" id="pricing">
      <div class="container">
        <div class="section-header">
          <h2>{pricing.title}</h2>
          <p>{pricing.subtitle}</p>
        </div>

        <div class="pricing-grid">
          {pricing.tiers.map((tier) => (
            <PricingCard
              name={tier.name}
              price={tier.price}
              period={tier.period}
              description={tier.description}
              features={tier.features.map(f => ({ title: f }))}
              badge={tier.badge}
              badgeType={tier.badgeType as 'free' | 'primary' | 'default'}
              buttonText={tier.buttonText}
              buttonLink={tier.buttonLink}
              featured={tier.featured}
              guarantee={tier.featured ? "30-day money-back guarantee" : ""}
            />
          ))}
        </div>
      </div>
    </section>

    <!-- Testimonials -->
    {featuredTestimonial && (
      <section class="testimonials-section">
        <div class="container">
          <div class="testimonial-card">
            <Card variant="elevated" padding="lg">
              <div class="testimonial-content">
                <div class="quote-icon">"</div>
                <blockquote class="testimonial-quote">
                  {featuredTestimonial.data.quote}
                </blockquote>
                <div class="testimonial-author">
                  <div class="author-info">
                    <div class="author-name">{featuredTestimonial.data.author}</div>
                    <div class="author-title">{featuredTestimonial.data.title}, {featuredTestimonial.data.company}</div>
                  </div>
                </div>
                {featuredTestimonial.data.metric && (
                  <div class="testimonial-metric">
                    <span class="metric-value">{featuredTestimonial.data.metric}</span>
                    <span class="metric-label">{featuredTestimonial.data.metricLabel}</span>
                  </div>
                )}
              </div>
            </Card>
          </div>
        </div>
      </section>
    )}

    <!-- Social Proof Stats -->
    <section class="stats-section">
      <div class="container">
        <div class="stats-grid">
          {stats.map((stat) => (
            <div class="stat">
              <div class="stat-value">{stat.value}</div>
              <div class="stat-label">{stat.label}</div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Final CTA -->
    <section class="final-cta">
      <div class="container">
        <Card variant="elevated" padding="lg" class="cta-card">
          <h2 class="cta-title">{finalCTA.title}</h2>
          <p class="cta-description">{finalCTA.description}</p>
          <Button size="lg" href="/contact">{finalCTA.buttonText}</Button>
        </Card>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  /* Hero Section */
  .hero {
    padding: var(--space-24) 0 var(--space-20);
    background: linear-gradient(
      180deg,
      var(--bg-primary) 0%,
      var(--bg-secondary) 100%
    );
  }

  .hero .container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
    align-items: center;
  }

  .hero-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .hero-title {
    font-size: var(--text-6xl);
    line-height: var(--line-tight);
    font-weight: var(--weight-bold);
    color: var(--text-primary);
  }

  .gradient-text {
    background: linear-gradient(
      135deg,
      var(--color-primary-600),
      var(--color-accent-500)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: var(--text-xl);
    color: var(--text-secondary);
    line-height: var(--line-relaxed);
  }

  .hero-cta {
    display: flex;
    gap: var(--space-4);
    margin-top: var(--space-4);
  }

  .hero-trust {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    font-size: var(--text-sm);
    color: var(--text-secondary);
  }

  .hero-trust svg {
    width: 20px;
    height: 20px;
    color: var(--color-success);
  }

  .hero-visual {
    position: relative;
  }

  .hero-slider-container {
    position: relative;
    border-radius: var(--radius-2xl);
    overflow: hidden;
    box-shadow: var(--elevation-4);
    aspect-ratio: 4 / 3;
    height: 500px;
  }

  /* PSP Section */
  .psp-section {
    padding: var(--space-20) 0;
  }

  .psp-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-8);
    position: relative;
  }

  .psp-card {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-4);
    position: relative;
    overflow: visible;
    transition: all var(--transition-base);
    animation: fadeInUp 0.6s ease-out backwards;
  }

  /* Staggered entrance animations */
  .psp-card[data-index="0"] {
    animation-delay: 0.1s;
  }

  .psp-card[data-index="1"] {
    animation-delay: 0.2s;
  }

  .psp-card[data-index="2"] {
    animation-delay: 0.3s;
  }

  .psp-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--elevation-4), var(--glow-soft);
  }

  /* Step numbers */
  .psp-step-number {
    position: absolute;
    top: var(--space-4);
    right: var(--space-4);
    font-size: var(--text-xs);
    font-weight: var(--weight-bold);
    color: var(--text-tertiary);
    background: var(--bg-tertiary);
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px solid var(--border-subtle);
    transition: all var(--transition-fast);
  }

  .psp-card:hover .psp-step-number {
    color: var(--color-primary-600);
    border-color: var(--color-primary-500);
    background: var(--color-primary-50);
    transform: scale(1.1);
  }

  [data-theme="dark"] .psp-card:hover .psp-step-number {
    color: var(--color-primary-400);
    background: var(--color-primary-950);
  }

  /* Icon container */
  .psp-icon {
    width: 80px;
    height: 80px;
    border-radius: var(--radius-2xl);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--space-2);
    position: relative;
    overflow: hidden;
    transition: all var(--transition-base);
  }

  /* Animated background layer */
  .psp-icon-bg {
    position: absolute;
    inset: -50%;
    background: linear-gradient(
      135deg,
      transparent 0%,
      rgba(255, 255, 255, 0.3) 50%,
      transparent 100%
    );
    animation: rotate 8s linear infinite;
  }

  .psp-card:hover .psp-icon-bg {
    animation-duration: 4s;
  }

  .psp-icon svg {
    width: 40px;
    height: 40px;
    position: relative;
    z-index: 1;
    transition: all var(--transition-base);
  }

  .psp-card:hover .psp-icon svg {
    transform: scale(1.1);
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.2));
  }

  /* Problem icon - Yellow/Amber theme */
  .psp-icon.problem {
    background: linear-gradient(135deg, #fef3c7, #fde68a);
    color: #92400e;
    box-shadow: 0 4px 12px rgba(245, 158, 11, 0.3);
  }

  .psp-card:hover .psp-icon.problem {
    box-shadow: 0 8px 24px rgba(245, 158, 11, 0.4);
    animation: float 3s ease-in-out infinite;
  }

  /* Solution icon - Purple theme */
  .psp-icon.solution {
    background: linear-gradient(135deg, var(--color-primary-100), var(--color-primary-200));
    color: var(--color-primary-700);
    box-shadow: 0 4px 12px rgba(147, 51, 234, 0.3);
  }

  .psp-card:hover .psp-icon.solution {
    box-shadow: 0 8px 24px rgba(147, 51, 234, 0.4), var(--glow-primary);
    animation: float 3s ease-in-out infinite 0.5s;
  }

  [data-theme="dark"] .psp-icon.solution {
    background: linear-gradient(135deg, var(--color-primary-900), var(--color-primary-800));
    color: var(--color-primary-300);
  }

  /* Proof icon - Lime/Green theme */
  .psp-icon.proof {
    background: linear-gradient(135deg, var(--color-accent-100), var(--color-accent-200));
    color: var(--color-accent-800);
    box-shadow: 0 4px 12px rgba(132, 204, 22, 0.3);
  }

  .psp-card:hover .psp-icon.proof {
    box-shadow: 0 8px 24px rgba(132, 204, 22, 0.4), var(--glow-accent);
    animation: float 3s ease-in-out infinite 1s;
  }

  [data-theme="dark"] .psp-icon.proof {
    background: linear-gradient(135deg, var(--color-accent-900), var(--color-accent-800));
    color: var(--color-accent-300);
  }

  /* Flow arrows between cards */
  .psp-arrow {
    position: absolute;
    right: calc(-1 * var(--space-8) - 10px);
    top: 50%;
    transform: translateY(-50%);
    font-size: 2rem;
    color: var(--color-primary-400);
    opacity: 0.3;
    animation: pulseArrow 2s ease-in-out infinite;
    z-index: 10;
    pointer-events: none;
  }

  @keyframes pulseArrow {
    0%, 100% {
      opacity: 0.3;
      transform: translateY(-50%) translateX(0);
    }
    50% {
      opacity: 0.6;
      transform: translateY(-50%) translateX(5px);
    }
  }

  .psp-title {
    font-size: var(--text-xl);
    font-weight: var(--weight-semibold);
    color: var(--text-primary);
    transition: color var(--transition-fast);
  }

  .psp-card:hover .psp-title {
    color: var(--color-primary-600);
  }

  [data-theme="dark"] .psp-card:hover .psp-title {
    color: var(--color-primary-400);
  }

  .psp-description {
    font-size: var(--text-base);
    color: var(--text-secondary);
    line-height: var(--line-relaxed);
  }

  /* Features Section */
  .features-section {
    padding: var(--space-20) 0;
    background-color: var(--bg-secondary);
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .section-header h2 {
    font-size: var(--text-4xl);
    color: var(--text-primary);
    margin-bottom: var(--space-4);
  }

  .section-header p {
    font-size: var(--text-lg);
    color: var(--text-secondary);
  }

  /* Single Pane of Glass Visualization */
  .single-pane-visual {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: center;
    margin-bottom: var(--space-16);
    padding: var(--space-8);
    background: linear-gradient(
      135deg,
      var(--bg-elevated) 0%,
      var(--bg-tertiary) 100%
    );
    border-radius: var(--radius-2xl);
    border: 1px solid var(--border-subtle);
    box-shadow: var(--elevation-2);
    transition: all var(--transition-base);
  }

  .single-pane-visual:hover {
    box-shadow: var(--elevation-3), var(--glow-soft);
    border-color: var(--color-primary-500);
  }

  .visual-description {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .visual-title {
    font-size: var(--text-3xl);
    font-weight: var(--weight-bold);
    color: var(--text-primary);
    background: linear-gradient(
      135deg,
      var(--color-primary-600),
      var(--color-accent-500)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .visual-text {
    font-size: var(--text-lg);
    color: var(--text-secondary);
    line-height: var(--line-relaxed);
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-8);
  }

  .feature-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    padding: var(--space-6);
    transition: all var(--transition-base);
  }

  .feature-card:hover {
    transform: translateY(-4px) scale(1.02);
  }

  .feature-icon {
    font-size: 2.5rem;
    margin-bottom: var(--space-3);
    transition: transform var(--transition-base);
  }

  .feature-card:hover .feature-icon {
    transform: scale(1.1);
  }

  .feature-title {
    font-size: var(--text-lg);
    font-weight: var(--weight-semibold);
    color: var(--text-primary);
    margin: 0;
    transition: color var(--transition-fast);
  }

  .feature-card:hover .feature-title {
    color: var(--color-primary-600);
  }

  [data-theme="dark"] .feature-card:hover .feature-title {
    color: var(--color-primary-400);
  }

  .feature-description {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    line-height: var(--line-relaxed);
    margin: 0;
  }

  /* Pricing Section */
  .pricing-section {
    padding: var(--space-20) 0;
    background: linear-gradient(180deg, transparent, rgba(0, 0, 0, 0.02), transparent);
  }

  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-10);
    align-items: stretch;
    justify-items: center;
  }

  @media (max-width: 1024px) {
    .pricing-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-8);
    }
  }

  @media (max-width: 768px) {
    .pricing-grid {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }
  }

  /* Testimonials */
  .testimonials-section {
    padding: var(--space-20) 0;
    background-color: var(--bg-secondary);
  }

  .testimonial-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    text-align: center;
    position: relative;
  }

  .quote-icon {
    font-size: 4rem;
    line-height: 1;
    color: var(--color-primary-200);
    font-family: Georgia, serif;
  }

  .testimonial-quote {
    font-size: var(--text-2xl);
    line-height: var(--line-relaxed);
    color: var(--text-primary);
    font-style: italic;
  }

  .testimonial-author {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
  }

  .author-name {
    font-size: var(--text-lg);
    font-weight: var(--weight-semibold);
    color: var(--text-primary);
  }

  .author-title {
    font-size: var(--text-sm);
    color: var(--text-secondary);
  }

  .testimonial-metric {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-4);
    background-color: var(--bg-tertiary);
    border-radius: var(--radius-lg);
  }

  .metric-value {
    font-size: var(--text-4xl);
    font-weight: var(--weight-bold);
    background: linear-gradient(135deg, var(--color-primary-600), var(--color-accent-500));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .metric-label {
    font-size: var(--text-sm);
    color: var(--text-secondary);
  }

  /* Stats Section */
  .stats-section {
    padding: var(--space-16) 0;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-8);
  }

  .stat {
    text-align: center;
  }

  .stat-value {
    font-size: var(--text-5xl);
    font-weight: var(--weight-bold);
    color: var(--text-primary);
    display: block;
    margin-bottom: var(--space-2);
  }

  .stat-label {
    font-size: var(--text-base);
    color: var(--text-secondary);
  }

  /* Final CTA */
  .final-cta {
    padding: var(--space-20) 0;
  }

  .cta-card {
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-6);
    background: linear-gradient(
      135deg,
      var(--bg-secondary) 0%,
      var(--bg-tertiary) 100%
    );
  }

  .cta-title {
    font-size: var(--text-4xl);
    color: var(--text-primary);
  }

  .cta-description {
    font-size: var(--text-xl);
    color: var(--text-secondary);
    max-width: 600px;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .hero .container {
      grid-template-columns: 1fr;
      gap: var(--space-12);
    }

    .hero-visual {
      order: -1;
    }

    .psp-grid,
    .features-grid,
    .pricing-grid {
      grid-template-columns: 1fr;
    }

    .single-pane-visual {
      grid-template-columns: 1fr;
      gap: var(--space-8);
      text-align: center;
    }

    .pricing-card.featured {
      transform: scale(1);
    }

    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: var(--text-4xl);
    }

    .hero-subtitle {
      font-size: var(--text-lg);
    }

    .hero-cta {
      flex-direction: column;
    }

    .hero-trust {
      flex-wrap: wrap;
    }

    .section-header h2 {
      font-size: var(--text-3xl);
    }

    .testimonial-quote {
      font-size: var(--text-lg);
    }

    .cta-title {
      font-size: var(--text-3xl);
    }
  }
</style>
