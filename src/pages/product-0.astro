---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Button from '../components/Button.astro';
import Card from '../components/Card.astro';
import FlipCard from '../components/FlipCard.astro';

// Import page content from CMS
import product0Data from '../content/pages/product0.json';

const { hero, features, roi } = product0Data;
---

<BaseLayout
  title="Product 0 - Free Power Quality Monitoring | Voltry"
  description="Real-time power quality monitoring, completely free forever. Track THD, voltage, compliance, and more."
>
  <Header />

  <main id="main-content">
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="free-badge">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/><path d="M16 8h-6a2 2 0 100 4h4a2 2 0 110 4H8"/>
            <line x1="12" y1="2" x2="12" y2="4"/><line x1="12" y1="20" x2="12" y2="22"/>
          </svg>
          <span>{hero.badge}</span>
        </div>

        <h1 class="hero-title">
          {hero.title}<br />
          <span class="gradient-text">{hero.highlightedText}</span>
        </h1>

        <p class="hero-subtitle">
          {hero.subtitle}
        </p>

        <div class="hero-cta">
          <Button size="lg" href="/contact">{hero.primaryCTA}</Button>
          <Button variant="outline" size="lg" href="#features">{hero.secondaryCTA}</Button>
        </div>

        <div class="hero-trust">
          <svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          <span>{hero.trust1}</span>
          <svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          <span>{hero.trust2}</span>
          <svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          <span>{hero.trust3}</span>
        </div>
      </div>
    </section>

    <!-- Features Grid -->
    <section class="features-section" id="features">
      <div class="container">
        <div class="section-header">
          <h2>{features.title}</h2>
          <p>{features.subtitle}</p>
        </div>

        <div class="features-grid">
          {features.list.map((feature, index) => (
            <FlipCard
              title={feature.title}
              description={feature.description}
              icon={feature.icon}
              class={`feature-flip-card feature-flip-card--${index}`}
            />
          ))}
        </div>
      </div>
    </section>

    <!-- ROI Section -->
    <section class="roi-section">
      <div class="container">
        <Card variant="elevated" padding="lg" class="roi-card">
          <div class="roi-content">
            <div class="roi-visual">
              <img
                src={roi.image}
                alt="ROI calculator dashboard"
                loading="lazy"
              />
            </div>
            <div class="roi-info">
              <h2 class="roi-title">{roi.title}</h2>
              <div class="roi-stats">
                <div class="roi-stat">
                  <span class="roi-stat-value">{roi.stat1Value}</span>
                  <span class="roi-stat-label">{roi.stat1Label}</span>
                </div>
                <div class="roi-stat">
                  <span class="roi-stat-value">{roi.stat2Value}</span>
                  <span class="roi-stat-label">{roi.stat2Label}</span>
                </div>
              </div>
              <p class="roi-description">{roi.description}</p>
              <Button size="lg" href="/contact">{roi.buttonText}</Button>
            </div>
          </div>
        </Card>
      </div>
    </section>

    <!-- What's Next Section -->
    <section class="upgrade-section">
      <div class="container">
        <div class="section-header">
          <h2>Need Predictive Capabilities?</h2>
          <p>Upgrade to Product 1 for AI-powered forecasting</p>
        </div>

        <div class="upgrade-grid">
          <Card variant="elevated" class="upgrade-card current">
            <div class="upgrade-badge">CURRENT</div>
            <h3 class="upgrade-title">Product 0</h3>
            <div class="upgrade-price">Free</div>
            <p class="upgrade-description">Real-time monitoring and compliance</p>
            <ul class="upgrade-features">
              <li><svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>Real-time monitoring</li>
              <li><svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>Compliance reports</li>
              <li><svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>Email alerts</li>
            </ul>
          </Card>

          <Card variant="elevated" class="upgrade-card featured">
            <div class="upgrade-badge primary">UPGRADE</div>
            <h3 class="upgrade-title">Product 1</h3>
            <div class="upgrade-price">$499<span>/mo</span></div>
            <p class="upgrade-description">Everything in P0 + AI forecasting</p>
            <ul class="upgrade-features">
              <li><svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>Everything in Product 0</li>
              <li><svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>24-72h forecasts</li>
              <li><svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>Failure prediction</li>
              <li><svg viewBox="0 0 24 24" fill="currentColor"><path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>Federated learning</li>
            </ul>
            <Button size="lg" href="/product-1" class="upgrade-cta">Learn About Product 1</Button>
          </Card>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  /* Hero Section */
  .hero {
    padding: var(--space-20) 0 var(--space-12);
    text-align: center;
    background: linear-gradient(180deg, var(--bg-primary) 0%, var(--bg-secondary) 100%);
  }

  .hero .container {
    max-width: 800px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-6);
  }

  .free-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-6);
    background: linear-gradient(135deg, var(--color-accent-100), var(--color-accent-200));
    color: var(--color-accent-900);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: var(--weight-semibold);
    letter-spacing: 0.05em;
  }

  .free-badge svg {
    width: 20px;
    height: 20px;
  }

  .hero-title {
    font-size: var(--text-6xl);
    line-height: var(--line-tight);
    font-weight: var(--weight-bold);
    color: var(--text-primary);
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--color-primary-600), var(--color-accent-500));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: var(--text-xl);
    color: var(--text-secondary);
    line-height: var(--line-relaxed);
  }

  .hero-cta {
    display: flex;
    gap: var(--space-4);
    margin-top: var(--space-4);
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .hero-cta {
      width: 100%;
    }

    .hero-cta :global(a),
    .hero-cta :global(button) {
      flex: 1;
      min-width: 100%;
    }
  }

  .hero-trust {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    font-size: var(--text-sm);
    color: var(--text-secondary);
    flex-wrap: wrap;
    justify-content: center;
  }

  .hero-trust svg {
    width: 20px;
    height: 20px;
    color: var(--color-success);
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .hero-trust {
      gap: var(--space-3);
      font-size: var(--text-xs);
    }

    .hero-trust svg {
      width: 16px;
      height: 16px;
    }
  }

  /* Features Section */
  .features-section {
    padding: var(--space-20) 0;
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .section-header h2 {
    font-size: var(--text-4xl);
    color: var(--text-primary);
    margin-bottom: var(--space-4);
  }

  .section-header p {
    font-size: var(--text-lg);
    color: var(--text-secondary);
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-8);
  }

  /* Flip Card Staggered Animations */
  .feature-flip-card {
    animation: fadeInUp 0.6s ease-out backwards;
  }

  .feature-flip-card--0 { animation-delay: 0.1s; }
  .feature-flip-card--1 { animation-delay: 0.2s; }
  .feature-flip-card--2 { animation-delay: 0.3s; }
  .feature-flip-card--3 { animation-delay: 0.4s; }
  .feature-flip-card--4 { animation-delay: 0.5s; }
  .feature-flip-card--5 { animation-delay: 0.6s; }

  /* ROI Section */
  .roi-section {
    padding: var(--space-20) 0;
    background-color: var(--bg-secondary);
  }

  .roi-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: center;
  }

  .roi-visual {
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--elevation-3);
  }

  .roi-visual img {
    width: 100%;
    height: auto;
    display: block;
  }

  .roi-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .roi-title {
    font-size: var(--text-3xl);
    color: var(--text-primary);
  }

  .roi-stats {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .roi-stat {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .roi-stat-value {
    font-size: var(--text-3xl);
    font-weight: var(--weight-bold);
    color: var(--color-primary-600);
  }

  .roi-stat-label {
    font-size: var(--text-sm);
    color: var(--text-secondary);
  }

  .roi-description {
    font-size: var(--text-base);
    color: var(--text-secondary);
    line-height: var(--line-relaxed);
  }

  /* Upgrade Section */
  .upgrade-section {
    padding: var(--space-20) 0;
  }

  .upgrade-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-8);
    max-width: 900px;
    margin: 0 auto;
  }

  .upgrade-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
    padding: var(--space-8);
    position: relative;
    transition: all var(--transition-base);
  }

  .upgrade-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--elevation-3), var(--glow-soft);
  }

  .upgrade-card.featured {
    border: 2px solid var(--color-primary-500);
    box-shadow: var(--elevation-3), var(--glow-primary);
  }

  .upgrade-card.featured:hover {
    box-shadow: var(--elevation-4), var(--glow-primary);
    transform: translateY(-6px) scale(1.02);
  }

  .upgrade-badge {
    display: inline-block;
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: var(--weight-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    background-color: var(--color-gray-200);
    color: var(--color-gray-700);
    width: fit-content;
  }

  .upgrade-badge.primary {
    background: linear-gradient(135deg, var(--color-primary-600), var(--color-primary-700));
    color: white;
  }

  .upgrade-title {
    font-size: var(--text-2xl);
    font-weight: var(--weight-bold);
    color: var(--text-primary);
  }

  .upgrade-price {
    font-size: var(--text-4xl);
    font-weight: var(--weight-bold);
    color: var(--text-primary);
  }

  .upgrade-price span {
    font-size: var(--text-lg);
    color: var(--text-secondary);
  }

  .upgrade-description {
    font-size: var(--text-base);
    color: var(--text-secondary);
    padding-bottom: var(--space-4);
    border-bottom: 1px solid var(--border-subtle);
  }

  .upgrade-features {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .upgrade-features li {
    display: flex;
    align-items: flex-start;
    gap: var(--space-3);
    font-size: var(--text-sm);
    color: var(--text-secondary);
  }

  .upgrade-features svg {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
    color: var(--color-success);
    margin-top: 2px;
  }

  .upgrade-cta {
    width: 100%;
    margin-top: var(--space-4);
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-6);
    }

    .roi-content {
      grid-template-columns: 1fr;
    }

    .roi-visual {
      order: -1;
    }

    .upgrade-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }

    .upgrade-card.featured {
      transform: scale(1);
    }
  }

  @media (max-width: 768px) {
    .hero {
      padding: var(--space-16) 0 var(--space-12);
    }

    .features-grid {
      grid-template-columns: 1fr;
    }

    .features-section {
      padding: var(--space-12) 0;
    }

    .roi-section {
      padding: var(--space-12) 0;
    }

    .upgrade-section {
      padding: var(--space-12) 0;
    }

    .hero-title {
      font-size: var(--text-4xl);
    }

    .hero-subtitle {
      font-size: var(--text-lg);
    }

    .hero-cta {
      flex-direction: column;
      width: 100%;
    }

    .section-header {
      margin-bottom: var(--space-8);
    }

    .section-header h2 {
      font-size: var(--text-3xl);
    }

    .section-header p {
      font-size: var(--text-base);
    }

    .roi-title {
      font-size: var(--text-2xl);
    }
  }
</style>
