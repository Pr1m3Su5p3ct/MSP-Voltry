---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Card from '../components/Card.astro';

// Import page content from CMS
import contactData from '../content/pages/contact.json';

const { hero, contactInfo, faq } = contactData;
---

<BaseLayout
  title="Contact Us - Start Your Free Pilot | Voltry"
  description="Request a free pilot of Voltry's power quality monitoring. Start monitoring in less than 5 minutes."
>
  <Header />

  <main id="main-content">
    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <h1 class="hero-title">
          {hero.title} <span class="gradient-text">{hero.highlightedText}</span>
        </h1>
        <p class="hero-subtitle">
          {hero.subtitle}
        </p>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="contact-section">
      <div class="container">
        <div class="contact-grid">
          <!-- Contact Form -->
          <Card variant="elevated" padding="lg" class="form-card">
            <form class="contact-form" name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field">
              <input type="hidden" name="form-name" value="contact" />

              <!-- Honeypot field for spam prevention -->
              <div style="display: none;">
                <label>Don't fill this out: <input name="bot-field" /></label>
              </div>

              <div class="form-group">
                <label for="name" class="form-label">Name *</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  class="form-input"
                  placeholder="John Doe"
                  required
                />
              </div>

              <div class="form-group">
                <label for="email" class="form-label">Email *</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="form-input"
                  placeholder="john@company.com"
                  required
                />
              </div>

              <div class="form-group">
                <label for="company" class="form-label">Company *</label>
                <input
                  type="text"
                  id="company"
                  name="company"
                  class="form-input"
                  placeholder="Acme Data Centers"
                  required
                />
              </div>

              <div class="form-group">
                <label for="facility-size" class="form-label">Facility Size *</label>
                <select
                  id="facility-size"
                  name="facility-size"
                  class="form-input"
                  required
                >
                  <option value="">Select facility size</option>
                  <option value="small">Small (&lt; 1 MW)</option>
                  <option value="medium">Medium (1-10 MW)</option>
                  <option value="large">Large (10-50 MW)</option>
                  <option value="enterprise">Enterprise (&gt; 50 MW)</option>
                </select>
              </div>

              <div class="form-group">
                <label for="message" class="form-label">Message</label>
                <textarea
                  id="message"
                  name="message"
                  class="form-input form-textarea"
                  rows="4"
                  placeholder="Tell us about your power quality challenges..."
                ></textarea>
              </div>

              <div class="form-group form-checkbox">
                <input
                  type="checkbox"
                  id="consent"
                  name="consent"
                  required
                />
                <label for="consent" class="checkbox-label">
                  I agree to receive communications from Voltry
                </label>
              </div>

              <button type="submit" class="form-submit">
                <span class="btn-text">Start Free Pilot</span>
                <span class="btn-loading">
                  <svg class="spinner" viewBox="0 0 24 24">
                    <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="3" fill="none" stroke-dasharray="32" stroke-dashoffset="32"/>
                  </svg>
                  Submitting...
                </span>
              </button>

              <p class="form-footer">
                By submitting, you agree to our <a href="/privacy">Privacy Policy</a> and <a href="/terms">Terms of Service</a>
              </p>
            </form>

            <!-- Success Message -->
            <div class="form-success" style="display: none;">
              <div class="success-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M22 11.08V12a10 10 0 11-5.93-9.14"/>
                  <polyline points="22 4 12 14.01 9 11.01"/>
                </svg>
              </div>
              <h3 class="success-title">Thank You!</h3>
              <p class="success-message">Your request has been received. Our team will contact you within 24 hours to set up your free pilot.</p>
              <button type="button" class="reset-form-btn">Submit Another Request</button>
            </div>

            <!-- Error Message -->
            <div class="form-error" style="display: none;">
              <div class="error-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                  <line x1="15" y1="9" x2="9" y2="15"/>
                  <line x1="9" y1="9" x2="15" y2="15"/>
                </svg>
              </div>
              <h3 class="error-title">Submission Failed</h3>
              <p class="error-message">Something went wrong. Please try again or contact us directly at sales@voltry.com</p>
              <button type="button" class="retry-form-btn">Try Again</button>
            </div>
          </Card>

          <!-- Contact Info Sidebar -->
          <div class="contact-sidebar">
            <!-- Email -->
            <Card variant="elevated" class="contact-info-card">
              <div class="contact-info-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                  <polyline points="22,6 12,13 2,6"/>
                </svg>
              </div>
              <h3 class="contact-info-title">Email</h3>
              <a href={`mailto:${contactInfo.salesEmail}`} class="contact-info-link">{contactInfo.salesEmail}</a>
              <p class="contact-info-description">For sales & demos</p>
            </Card>

            <!-- Support -->
            <Card variant="elevated" class="contact-info-card">
              <div class="contact-info-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 15a2 2 0 01-2 2H7l-4 4V5a2 2 0 012-2h14a2 2 0 012 2z"/>
                </svg>
              </div>
              <h3 class="contact-info-title">Support</h3>
              <a href={`mailto:${contactInfo.supportEmail}`} class="contact-info-link">{contactInfo.supportEmail}</a>
              <p class="contact-info-description">For technical questions</p>
            </Card>

            <!-- Location -->
            <Card variant="elevated" class="contact-info-card">
              <div class="contact-info-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0118 0z"/>
                  <circle cx="12" cy="10" r="3"/>
                </svg>
              </div>
              <h3 class="contact-info-title">Location</h3>
              <p class="contact-info-text">{contactInfo.location}</p>
              <p class="contact-info-description">{contactInfo.servingArea}</p>
            </Card>

            <!-- Hours -->
            <Card variant="elevated" class="contact-info-card">
              <div class="contact-info-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                  <polyline points="12 6 12 12 16 14"/>
                </svg>
              </div>
              <h3 class="contact-info-title">Hours</h3>
              <p class="contact-info-text">{contactInfo.hours}</p>
              <p class="contact-info-description">{contactInfo.emergencyNote}</p>
            </Card>
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ Section -->
    <section class="faq-section">
      <div class="container">
        <div class="section-header">
          <h2>{faq.title}</h2>
          <p>{faq.subtitle}</p>
        </div>

        <div class="faq-list">
          {faq.questions.map((item) => (
            <details class="faq-item">
              <summary class="faq-question">
                <span class="faq-question-text">{item.question}</span>
                <svg class="faq-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="6 9 12 15 18 9"></polyline>
                </svg>
              </summary>
              <div class="faq-answer">
                {item.answer}
              </div>
            </details>
          ))}
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<script>
  const contactForm = document.querySelector('.contact-form') as HTMLFormElement;
  const successMessage = document.querySelector('.form-success') as HTMLElement;
  const errorMessage = document.querySelector('.form-error') as HTMLElement;
  const submitBtn = document.querySelector('.form-submit') as HTMLButtonElement;
  const resetBtn = document.querySelector('.reset-form-btn');
  const retryBtn = document.querySelector('.retry-form-btn');

  contactForm?.addEventListener('submit', async (e) => {
    e.preventDefault();

    // Show loading state
    submitBtn.disabled = true;
    submitBtn.classList.add('loading');

    const formData = new FormData(contactForm);

    try {
      const response = await fetch('/', {
        method: 'POST',
        headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
        body: new URLSearchParams(formData as any).toString()
      });

      if (response.ok) {
        // Show success message
        contactForm.style.display = 'none';
        successMessage.style.display = 'block';
        successMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
      } else {
        throw new Error('Form submission failed');
      }
    } catch (error) {
      // Show error message
      contactForm.style.display = 'none';
      errorMessage.style.display = 'block';
      errorMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
    } finally {
      submitBtn.disabled = false;
      submitBtn.classList.remove('loading');
    }
  });

  // Reset form button
  resetBtn?.addEventListener('click', () => {
    contactForm.reset();
    successMessage.style.display = 'none';
    contactForm.style.display = 'flex';
  });

  // Retry button
  retryBtn?.addEventListener('click', () => {
    errorMessage.style.display = 'none';
    contactForm.style.display = 'flex';
  });
</script>

<style>
  /* Hero Section */
  .hero {
    padding: var(--space-20) 0 var(--space-12);
    text-align: center;
    position: relative;
    overflow: hidden;
    background: linear-gradient(
      180deg,
      var(--bg-primary) 0%,
      var(--bg-secondary) 100%
    );
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.03;
    background-image:
      repeating-linear-gradient(0deg, transparent, transparent 2px, var(--text-primary) 2px, var(--text-primary) 3px),
      repeating-linear-gradient(90deg, transparent, transparent 2px, var(--text-primary) 2px, var(--text-primary) 3px);
    background-size: 40px 40px;
    z-index: 0;
    pointer-events: none;
  }

  .hero > .container {
    position: relative;
    z-index: 1;
  }

  .hero-title {
    font-size: var(--text-5xl);
    line-height: var(--line-tight);
    font-weight: var(--weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-4);
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--color-primary-600), var(--color-accent-500));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: var(--text-xl);
    color: var(--text-secondary);
  }

  /* Contact Section */
  .contact-section {
    padding: var(--space-20) 0;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: var(--space-8);
    align-items: start;
  }

  /* Contact Form */
  .form-card {
    position: sticky;
    top: calc(4rem + var(--space-4));
  }

  .contact-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .form-label {
    font-size: var(--text-sm);
    font-weight: var(--weight-medium);
    color: var(--text-primary);
  }

  .form-input {
    padding: var(--space-3);
    font-size: var(--text-base);
    font-family: var(--font-sans);
    color: var(--text-primary);
    background-color: var(--bg-tertiary);
    border: 2px solid var(--border-subtle);
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
    position: relative;
  }

  .form-input:hover {
    border-color: var(--border-default);
    background-color: var(--bg-secondary);
  }

  .form-input:focus {
    outline: none;
    border-color: var(--color-primary-500);
    box-shadow: 0 0 0 4px var(--color-primary-100), var(--elevation-1);
    background-color: var(--bg-secondary);
    transform: translateY(-1px);
  }

  [data-theme="dark"] .form-input:focus {
    box-shadow: 0 0 0 4px rgba(147, 51, 234, 0.2), var(--elevation-1);
  }

  .form-input:valid:not(:placeholder-shown) {
    border-color: var(--color-success);
  }

  .form-input:invalid:not(:placeholder-shown):not(:focus) {
    border-color: var(--color-error);
  }

  .form-input::placeholder {
    color: var(--text-tertiary);
  }

  .form-textarea {
    resize: vertical;
    min-height: 100px;
  }

  select.form-input {
    cursor: pointer;
  }

  .form-checkbox {
    flex-direction: row;
    align-items: center;
    gap: var(--space-3);
  }

  .form-checkbox input[type="checkbox"] {
    width: 20px;
    height: 20px;
    cursor: pointer;
    accent-color: var(--color-primary-600);
  }

  .checkbox-label {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    cursor: pointer;
    user-select: none;
  }

  .form-submit {
    padding: var(--space-4) var(--space-8);
    font-size: var(--text-lg);
    font-weight: var(--weight-semibold);
    font-family: var(--font-sans);
    color: white;
    background: linear-gradient(135deg, var(--color-primary-600), var(--color-primary-700));
    border: none;
    border-radius: var(--radius-lg);
    cursor: pointer;
    transition: all var(--transition-base);
    box-shadow: var(--elevation-2), var(--glow-primary);
    position: relative;
    overflow: hidden;
  }

  .form-submit::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
  }

  .form-submit:hover::before {
    width: 300px;
    height: 300px;
  }

  .form-submit:hover {
    box-shadow: var(--elevation-3), var(--glow-primary);
    transform: translateY(-2px) scale(1.02);
    background: linear-gradient(135deg, var(--color-primary-500), var(--color-primary-600));
  }

  .form-submit:active {
    transform: translateY(0) scale(0.98);
    box-shadow: var(--elevation-1);
  }

  .form-submit:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
  }

  .form-submit .btn-loading {
    display: none;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
  }

  .form-submit.loading .btn-text {
    display: none;
  }

  .form-submit.loading .btn-loading {
    display: flex;
  }

  .spinner {
    width: 20px;
    height: 20px;
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .form-footer {
    font-size: var(--text-xs);
    color: var(--text-tertiary);
    text-align: center;
  }

  /* Form Success & Error Messages */
  .form-success,
  .form-error {
    text-align: center;
    padding: var(--space-8);
    animation: fadeInUp 0.5s ease-out;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .success-icon,
  .error-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 80px;
    height: 80px;
    border-radius: var(--radius-full);
    margin-bottom: var(--space-6);
  }

  .success-icon {
    background: linear-gradient(135deg, var(--color-success), #059669);
    color: white;
  }

  .error-icon {
    background: linear-gradient(135deg, var(--color-error), #dc2626);
    color: white;
  }

  .success-icon svg,
  .error-icon svg {
    width: 40px;
    height: 40px;
  }

  .success-title,
  .error-title {
    font-size: var(--text-2xl);
    font-weight: var(--weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-3);
  }

  .success-message,
  .error-message {
    font-size: var(--text-base);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
    margin-bottom: var(--space-6);
  }

  .reset-form-btn,
  .retry-form-btn {
    padding: var(--space-3) var(--space-6);
    font-size: var(--text-base);
    font-weight: var(--weight-medium);
    font-family: var(--font-sans);
    color: var(--color-primary-600);
    background: transparent;
    border: 2px solid var(--color-primary-600);
    border-radius: var(--radius-lg);
    cursor: pointer;
    transition: all var(--transition-base);
  }

  .reset-form-btn:hover,
  .retry-form-btn:hover {
    background: var(--color-primary-600);
    color: white;
    transform: translateY(-2px);
    box-shadow: var(--elevation-2);
  }

  .form-footer a {
    color: var(--color-primary-600);
    text-decoration: underline;
  }

  /* Contact Sidebar */
  .contact-sidebar {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .contact-info-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    text-align: center;
  }

  .contact-info-icon {
    width: 48px;
    height: 48px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-primary-100), var(--color-primary-200));
    color: var(--color-primary-700);
    border-radius: var(--radius-lg);
  }

  [data-theme="dark"] .contact-info-icon {
    background: linear-gradient(135deg, var(--color-primary-900), var(--color-primary-800));
    color: var(--color-primary-300);
  }

  .contact-info-icon svg {
    width: 24px;
    height: 24px;
  }

  .contact-info-title {
    font-size: var(--text-sm);
    font-weight: var(--weight-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-primary);
  }

  .contact-info-link {
    font-size: var(--text-lg);
    font-weight: var(--weight-medium);
    color: var(--color-primary-600);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .contact-info-link:hover {
    color: var(--color-primary-700);
  }

  .contact-info-text {
    font-size: var(--text-base);
    font-weight: var(--weight-medium);
    color: var(--text-primary);
  }

  .contact-info-description {
    font-size: var(--text-sm);
    color: var(--text-secondary);
  }

  /* FAQ Section */
  .faq-section {
    padding: var(--space-20) 0;
    background-color: var(--bg-secondary);
    position: relative;
  }

  .faq-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.02;
    background-image: radial-gradient(circle at 2px 2px, var(--text-primary) 1px, transparent 1px);
    background-size: 24px 24px;
    pointer-events: none;
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
    position: relative;
    z-index: 1;
  }

  .section-header h2 {
    font-size: var(--text-4xl);
    color: var(--text-primary);
    margin-bottom: var(--space-4);
  }

  .section-header p {
    font-size: var(--text-lg);
    color: var(--text-secondary);
  }

  .faq-list {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    position: relative;
    z-index: 1;
  }

  .faq-item {
    background-color: var(--bg-elevated);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition-base);
    box-shadow: var(--elevation-1);
  }

  .faq-item:hover {
    box-shadow: var(--elevation-2), var(--glow-soft);
    border-color: var(--border-default);
  }

  .faq-item[open] {
    box-shadow: var(--elevation-3), var(--glow-soft);
    border-color: var(--color-primary-300);
  }

  [data-theme="dark"] .faq-item[open] {
    border-color: var(--color-primary-700);
  }

  .faq-question {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-5) var(--space-6);
    cursor: pointer;
    user-select: none;
    list-style: none;
    transition: all var(--transition-fast);
    position: relative;
  }

  .faq-question::-webkit-details-marker {
    display: none;
  }

  .faq-question::marker {
    display: none;
  }

  .faq-question:hover {
    background-color: var(--bg-tertiary);
  }

  .faq-item[open] .faq-question {
    background: linear-gradient(
      135deg,
      var(--color-primary-50) 0%,
      transparent 100%
    );
    border-bottom: 1px solid var(--border-subtle);
  }

  [data-theme="dark"] .faq-item[open] .faq-question {
    background: linear-gradient(
      135deg,
      rgba(147, 51, 234, 0.1) 0%,
      transparent 100%
    );
  }

  .faq-question-text {
    font-size: var(--text-lg);
    font-weight: var(--weight-semibold);
    color: var(--text-primary);
  }

  .faq-icon {
    width: 20px;
    height: 20px;
    color: var(--color-primary-600);
    transition: transform var(--transition-base);
    flex-shrink: 0;
  }

  [data-theme="dark"] .faq-icon {
    color: var(--color-primary-400);
  }

  .faq-item[open] .faq-icon {
    transform: rotate(180deg);
  }

  .faq-answer {
    padding: var(--space-6);
    font-size: var(--text-base);
    color: var(--text-secondary);
    line-height: var(--line-relaxed);
    animation: fadeInDown 0.3s ease-out;
  }

  @keyframes fadeInDown {
